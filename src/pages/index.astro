---
import MainLayout from "@/layouts/MainLayout.astro";
import Image from "astro/components/Image.astro";

import avatar from "@/assets/avatar-michelle.jpg";
import share from "@/assets/icon-share.svg";
import twitter from "@/assets/icon-twitter.svg";
import facebook from "@/assets/icon-facebook.svg";
import pinterest from "@/assets/icon-pinterest.svg";
---

<MainLayout
  title="Frontend Mentor | Article Preview Component"
  description="A article preview component challenge from Frontend Mentor."
>
  <main class="flex min-h-screen items-center justify-center">
    <div
      class="relative flex h-[505px] w-[330px] flex-col rounded-xl bg-white shadow-xs md:h-[280px] md:w-[720px] md:flex-row"
    >
      <div
        class="h-[505px] w-[330px] rounded-t-xl bg-[url('/src/assets/drawers.jpg')] bg-cover bg-left md:h-[280px] md:w-[840px] md:rounded-l-xl md:rounded-r-none"
      >
      </div>
      <article class="px-8 py-8 pb-2 md:px-10">
        <h1
          class="text-theme-very-dark-grayish-blue text-[1rem] leading-snug font-bold md:text-[1.25rem]"
        >
          Shift the overall look and feel by adding these wonderful touches to
          furniture in your home
        </h1>
        <p
          class="text-theme-desaturated-dark-blue mt-3 text-[13.5px] md:text-[13px]"
        >
          Ever been in a room and felt like something was missing? Perhhaps it
          felt slightly bare and uninviting. I've got some simple tips to help
          you make any room feel complete.
        </p>
        <div class="mt-6 flex h-16 items-center gap-3 md:mt-5 md:pb-6">
          <div class="flex-none">
            <Image
              src={avatar}
              alt="Michelle Appleton"
              loading="eager"
              class="rounded-full"
              width="40"
            />
          </div>
          <div class="flex-initial">
            <p class="text-theme-very-dark-grayish-blue font-bold">
              Michelle Appleton
            </p>
            <p class="text-theme-grayish-blue">28 Jun 2020</p>
          </div>
          <div class="flex flex-1 justify-end">
            <div class="bg-theme-light-grayish-blue z-10 rounded-full p-2">
              <Image
                src={share}
                alt="Share with social sites"
                loading="eager"
                id="social"
              />
            </div>
          </div>
        </div>
      </article>
      <div
        class="bg-theme-very-dark-grayish-blue absolute bottom-0 hidden h-16 w-full items-center gap-4 rounded-b-xl px-9 md:-right-16 md:bottom-24 md:h-14 md:w-[244px] md:rounded-xl"
        id="popup"
      >
        <p class="text-theme-grayish-blue tracking-[.45em] uppercase">Share</p>
        <a
          href="https://facebook.com"
          target="_blank"
          referrerpolicy="no-referrer"
        >
          <Image src={facebook} alt="Facebook" loading={"lazy"} />
        </a>
        <a href="https://x.com" target="_blank" referrerpolicy="no-referrer">
          <Image src={twitter} alt="Twitter" loading={"lazy"} />
        </a>
        <a
          href="https://pinterest.com"
          target="_blank"
          referrerpolicy="no-referrer"
        >
          <Image src={pinterest} alt="Pinterest" loading={"lazy"} />
        </a>
        <div
          class="border-t-theme-very-dark-grayish-blue absolute bottom-0 left-1/2 hidden h-0 w-0 -translate-x-1/2 translate-y-full transform border-t-[10px] border-r-[10px] border-l-[10px] border-r-transparent border-l-transparent md:block"
        >
        </div>
      </div>
    </div>
  </main>
</MainLayout>

<script>
  const social = document.getElementById("social") as HTMLImageElement;
  social?.addEventListener("click", () => {
    const popup = document.getElementById("popup") as HTMLDivElement;
    popup?.classList.toggle("hidden");
    popup?.classList.toggle("flex");
  });
</script>
